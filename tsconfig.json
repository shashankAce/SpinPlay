{
  "compilerOptions": {
    "target": "es2017", /* modern target, works well with webpack */
    "module": "esnext", /* let webpack handle module bundling */
    "rootDir": "client/src", /* your TS source root */
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    /* <--- important for debugging ---> */
    "sourceMap": true, /* generate .map files */
    "inlineSources": true, /* embed TS source text into the source map */
    "noEmitOnError": false
  },
  "include": [
    "client/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}